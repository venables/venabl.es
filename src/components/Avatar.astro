---
import { Image } from "astro:assets"
import { cn } from "../lib/utils/cn"
import type { ImageMetadata } from "astro"

interface Props {
  image: ImageMetadata,
  class?: string,
}

const { image, class: customClass = "" } = Astro.props
---

<span
  class={cn(
    "relative block aspect-square size-16 shrink-0 origin-top-left overflow-hidden rounded-xl transition-all md:size-24",
    customClass
  )}
  data-swing-target
  data-swing-trigger
>
  <Image alt="Matt Venables" class="aspect-square" src={image} />
</span>
