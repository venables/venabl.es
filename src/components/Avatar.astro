---
import { Image } from "astro:assets"
import type { ImageMetadata } from "astro"

interface Props {
  image: ImageMetadata
}

const { image } = Astro.props
---

<span
  class="relative block aspect-square size-16 shrink-0 origin-top-left overflow-hidden rounded-xl transition-all md:size-24"
  data-swing-target
  data-swing-trigger
>
  <Image alt="Matt Venables" class="aspect-square" src={image} />
</span>
