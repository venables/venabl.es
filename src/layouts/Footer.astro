---
import ThemeToggle from "../components/ThemeToggle.astro"

const year = new Date().getFullYear()
---

<footer
  class="flex max-w-xl flex-col-reverse items-center justify-between gap-2 text-xs text-muted-foreground sm:flex-row"
>
  <p class="grow">&copy; <span id="footer-year">{year}</span> matt venables.</p>
  <ThemeToggle class="text-xs sm:self-end" />
</footer>

<script is:inline>
  document.getElementById("footer-year").innerText = new Date().getFullYear()
</script>
